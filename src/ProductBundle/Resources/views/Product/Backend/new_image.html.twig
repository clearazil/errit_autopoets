{% extends 'backend.html.twig' %}

{% block body %}
    {% trans_default_domain "product" %}
        
     <!--breadcrumbs-area start -->
    <div class="breadcrumbs-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul>
                        <li><a href="{{ path('backend') }}">{{ 'COMMON_BACKEND'|trans({}, "common") }}</a> <span><i class="fa fa-angle-right"></i></span></li>
                        <li><a href="{{ path('backend_product_index') }}">{{ 'PRODUCT_PRODUCTS'|trans }}</a> <span><i class="fa fa-angle-right"></i></span></li>
                        <li><a href="{{ path('backend_product_show', { 'id': product.id }) }}">{{ product.name }}</a> <span><i class="fa fa-angle-right"></i></span></li>
                        <li>{{ 'COMMON_IMAGE'|trans({}, "common") }}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--breadcrumbs-area end -->
    
    <!--elements start-->
    <div class="elements">
        <div class="typhography text-left">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 col-md-10">
                        <h1>{{ 'PRODUCT_ADD_IMAGE_PRODUCT'|trans }}</h1>

                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <input class="btn btn-primary" type="submit" value="{{ 'COMMON_UPLOAD'|trans({}, "common") }}" />
                            <a class="btn btn-info" href="{{ path('backend_product_show', { 'id': product.id }) }}">{{ 'PRODUCT_BACK_TO_PRODUCT'|trans }}</a>
                        {{ form_end(form) }}
                    </div>
                </div>                        
            </div>            
        </div>
    </div>
    <!--elements end--> 
{% endblock %}
