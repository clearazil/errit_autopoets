{% if pageCount > 1 %}
    <div class="pagination-box">
        <div class="row">
            <div class="col-md-12">
                <div class="pagination-inner">
                    <ul>
                        {% if previous is defined %}
                            <li>
                                <a style="width:127px;" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}</a>
                            </li>
                        {% endif %}

                        {% if startPage > 1 %}
                            <li>
                                <a href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
                            </li>
                            {% if startPage == 3 %}
                                <li>
                                    <a href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                                </li>
                            {% elseif startPage != 2 %}
                            <li class="disabled">
                                <span>&hellip;</span>
                            </li>
                            {% endif %}
                        {% endif %}

                        {% for page in pagesInRange %}
                            <li>
                                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                            </li>
                        {% endfor %}

                        {% if pageCount > endPage %}
                            {% if pageCount > (endPage + 1) %}
                                {% if pageCount > (endPage + 2) %}
                                    <li class="disabled">
                                        <span>&hellip;</span>
                                    </li>
                                {% else %}
                                    <li>
                                        <a href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                                    </li>
                                {% endif %}
                            {% endif %}
                            <li>
                                <a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
                            </li>
                        {% endif %}

                        {% if next is defined %}
                            <li>
                                <a style="width:127px;" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">{{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;&raquo;</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
                <div class="showing-page"><p>{{ 'KNP_ITEMS_PAGES_SHOWN'|trans({'%first_shown%' : firstItemNumber, '%last_shown%': lastItemNumber, '%total%': totalCount, '%page_count%': pageCount}, 'KnpPaginatorBundle') }}</p></div>
            </div>
        </div>
    </div>
{% endif %}
