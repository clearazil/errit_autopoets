                            </div>
                        </div>
                        <div class="col-md-3 hidden-sm hidden-xs">
                            <div class="call-us">
                                <span><i class="fa fa-phone"></i></span> {{ 'HOMEPAGE_CALL_ME'|trans }}: 06-419 427 43
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-4  hidden-xs">
                            <div class="top-email">
                                <span><i class="fa fa-envelope-o"></i></span> {{ 'COMMON_EMAIL'|trans({}, "common") }}: erritsjoerd@hotmail.com
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-4 col-xs-12">
                            <div class="header-meddle-right">
                               <div class="login-account">
                                    <a href="{{ path('account') }}"><i class="fa fa-user"></i></a>
                                </div>
                                <div class="meni-cart">
                                    <a href="#" class="cart-icon"><i class="fa fa-shopping-bag"></i> $0.00</a>
                                    <span>2</span>
                                    <ul class="cart-area">
                                        <li class="single-cart">
                                            <div class="cart-img"><img src="{{ asset('img/cart/cart1.png') }}" alt=""></div>
                                            <div class="cart-content">
                                                <h4><a href="#">Mountain Bike <br/> Name Here</a></h4>
                                                <p>$122.00</p>
                                            </div>
                                            <div class="cart-del">
                                                <a href="#"><i class="fa fa-times"></i></a>
                                            </div>
                                        </li>
                                        <li class="single-cart">
                                            <div class="cart-img"><img src="{{ asset('img/cart/cart1.png') }}" alt=""></div>
                                            <div class="cart-content">
                                                <h4><a href="#">Mountain Bike <br/> Name Here</a></h4>
                                                <p>$122.00</p>
